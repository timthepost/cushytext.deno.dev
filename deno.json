{
  "imports": {
    "lume/": "https://cdn.jsdelivr.net/gh/lumeland/lume@bd475d62d8993dbc63c607498aa7e425901184cb/",
    "lume/cms/": "https://cdn.jsdelivr.net/gh/lumeland/cms@ba24aa8acb3eefb1cc0ef88c198c468793bcf286/",
    "lume/jsx-runtime": "https://deno.land/x/ssx@v0.1.9/jsx-runtime.ts"
  },
  "tasks": {
    "lume": "echo \"import 'lume/cli.ts'\" | deno run -A -",
    "build": "deno task lume",
    "serve": "deno task lume -s",
    "dev": "LUME_DRAFTS=true deno task lume -s",
    "mock": "deno run -A --watch src/_serve.ts",
    "clean": "rm -rf _site || true; rm -rf _cache || true",
    "update-deps": "deno run -A --quiet 'https://deno.land/x/nudd@v0.2.8/cli.ts' update plugins.ts deno.json",
    "cms": "deno task lume cms"
  },
  "compilerOptions": {
    "types": [
      "lume/types.ts"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "lume"
  },
  "lint": {
    "exclude": [
      "./_site"
    ],
    "rules": {
      "tags": [
        "recommended"
      ]
    },
    "plugins": [
      "https://cdn.jsdelivr.net/gh/lumeland/lume@bd475d62d8993dbc63c607498aa7e425901184cb/lint.ts"
    ]
  },
  "fmt": {
    "exclude": [
      "./_site"
    ],
    "plugins": [
      "https://cdn.jsdelivr.net/gh/lumeland/lume@b32c3acc59051eb89faa3b79c532d638767213ff/lint.ts"
    ]
  },
  "unstable": [
    "kv",
    "temporal"
  ]
}
